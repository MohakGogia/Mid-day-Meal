    </head>
    <body>
    <h3><center>Transporter Dashboard<center></h3>
	<% tid=transporter%>
    <form action="/logout" method="post">
        <div class='buton' style="width: 300px;height:20px;background-color:yellow;margin-top:7px;">
		<input style="background-color:black;width: 150px;height: 35px; margin-bottom: 10px;font-size: 16px;color:yellow" type="submit"  value="Logout" >
	</div>
	</form>
	<form action="/transporterAssignedMeal" method="post">
	<div class='buton'>
        <input type="hidden" id="Transporterid" name="Transporterid" value=<%= transporter %> readonly />
    </div>
    <br>
	<div class='buton' style="width: 300px;height:20px;background-color:yellow;margin-top:7px;">
        <input type="submit" style="background-color:black;width: 150px;height: 35px; margin-bottom: 10px;font-size: 16px;color:yellow" value="Assigned Meals" >
    </div>
	</form>
    </div>
	</form >
    <div class="container">
    <form id ="contact" action="/acceptMealByTransporter" method="post">
		<div style="max-width: 450px; background-color: green; font-size: 18px; text-align:  center;">
		<%= Error %>
		</div>
        <h3 style="font-size: 38px;">Accept Shipment</h3>   
        <div>
            <label for="Mealid">Meal ID</label>
            <input type="Number" id="Mealid" name="Mealid"/>
        </div>
        <div>
              <label for="Transporterid">Transporter ID</label>
              <input type="number" id="Transporterid" name="Transporterid" value=<%= transporter %> readonly />
        </div>
        <div>
            <label for="Schoolid">School ID</label>
            <input type="number" id="Schoolid" name="Schoolid" placeholder="Schoolid" required />
        </div>
        <div class='buton'>
            <input style="background-color: blue; font-size: 16px; border-color: blue;" type="submit"  value="Accept Shipment" >
        </div>
    </form>
    </div>
    </body>
    </html>