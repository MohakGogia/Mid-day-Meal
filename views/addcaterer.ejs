            </div>
			<div>
                  <label for="catererName">caterer Name</label>
                  <input type="text" id="catererName" name="catererName" placeholder="Enter Name" required/>
            </div>
			<div>
                  <label for="catererPIN">caterer PIN Code</label>
                  <input type="number" id="catererPIN" name="catererPIN" placeholder="Enter PIN" required/>
            </div>
			<div>
                  <label for="catererEmail">caterer Email ID</label>
                  <input type="text" id="catererEmail" name="catererEmail" placeholder="Enter Email ID" required/>
            </div>
			<div>
                  <label for="catererMobile">caterer Mobile</label>
                  <input type="number" id="catererMobile" name="catererMobile" placeholder="Enter Mobile" required/>
            </div>
			<div>
                  <label for="catererSID">caterer Supervisor ID</label>
                  <input type="number" id="catererSID" name="catererSID" placeholder="Enter Supervisor ID" required/>
            </div>
            <div>
